 <script type="text/javascript">
 	
  
   function dis()
   {

    document.getElementById('menu').style.transform="translateX(200px)";

    
   }




   function shut()
   {


   document.getElementById('menu').style.transform="translateX(-200px)";


   }


   var x=document.getElementsByClassName('friendlistnames');

   x[0].style.background="#3CB371";

    x[4].style.background="#3CB371";
   
    x[6].style.background="#3CB371";
     x[7].style.background="#3CB371";
      

  function closemessages()
  {
  
  var z=document.getElementsByClassName('messagebox');
  z[0].style.display="none";

  

  }

  function openmessage()
  {

   var x=document.getElementsByClassName('messagebox');

   x[0].style.display="block";


  }





 </script>




